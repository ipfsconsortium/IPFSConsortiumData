{
	"$id": "http://datapinner.com/metadata-spec.json",
	"definitions": {
		"member": {
			"properties": {
				"ensname": {
					"$id": "/properties/ensname",
					"type": "string",
					"title": "ENS entry that resolves to IPFS hash with root manifest"
				},
				"membersize": {
					"$id": "/properties/membersize",
					"type": "string",
					"title": "max size in bytes that this member needs"
				}
			},
			"required": [
				"ensname",
				"membersize"
			]
		},
		"consortium": {
			"properties": {
				"type": {
					"$id": "/properties/type",
					"type": "string",
					"title": "metadata type",
					"const": "consortium"
				},
				"globalsize": {
					"$id": "/properties/globalsize",
					"type": "string",
					"title": "max consortium size in bytes"
				},
				"members": {
					"$id": "/properties/members",
					"type": "array",
					"items": {
						"type": "object",
						"$ref": "#/definitions/member"
					}
				}
			},
			"required": [
				"type",
				"globalsize"
			]
		},
		"manifest": {
			"properties": {
				"type": {
					"$id": "/properties/type",
					"type": "string",
					"title": "manifest type",
					"const": "manifest"
				},
				"ttl": {
					"$id": "/properties/ttl",
					"type": "integer",
					"title": "TTL for these hashes, in s",
					"default": 0
				},
				"pin": {
					"$id": "/properties/pin",
					"type": "array",
					"items": {
						"$id": "/properties/pin/items",
						"type": "string",
						"minLength": 46,
						"maxLength": 46,
						"title": "IPFS hash"
					}
				},
				"unpin": {
					"$id": "/properties/unpin",
					"type": "array",
					"items": {
						"$id": "/properties/unpin/items",
						"type": "string",
						"minLength": 46,
						"maxLength": 46,
						"title": "IPFS hash"
					}
				}
			},
			"required": [
				"type"
			]
		}
	},
	"type": "object",
	"anyOf": [{
		"$ref": "#/definitions/manifest"
	}, {
		"$ref": "#/definitions/consortium"
	}]
}
